<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFEC00"
    android:weightSum="2"
    tools:context=".Activity.AdminActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/alogbt"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/background1"
                            android:text="로그아웃"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:theme="@style/AppTheme.whiteRipple"
                            tools:ignore="HardcodedText,NewApi" />

                        <TextView
                            android:id="@+id/aaass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="현재 대기"
                            android:textColor="#000000"
                            android:textSize="50sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:weightSum="5">


                        <TextView
                            android:id="@+id/rwaitingnum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="번호"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/rreserve"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="인원"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/userphone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="휴대폰"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <!--                좌석-->
                        <!--                <TextView-->
                        <!--                    android:id="@+id/rbt"-->
                        <!--                    android:layout_width="match_parent"-->
                        <!--                    android:layout_height="match_parent"-->
                        <!--                    android:layout_marginLeft="10dp"-->
                        <!--                    android:layout_weight="1"-->
                        <!--                    android:gravity="center_horizontal|center_vertical"-->
                        <!--                    android:text="좌석"-->
                        <!--                    android:textColor="#000000"-->
                        <!--                    android:textSize="36sp" />-->

                        <TextView
                            android:id="@+id/rbt1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="호출"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/aaa"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="입장"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/arc1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:orientation="vertical">

                    <!--                    <Button-->
                    <!--                        android:id="@+id/alogbt"-->
                    <!--                        style="?android:attr/borderlessButtonStyle"-->
                    <!--                        android:layout_width="150dp"-->
                    <!--                        android:layout_height="60dp"-->
                    <!--                        android:background="#FFEC00"-->
                    <!--                        android:text="로그아웃"-->
                    <!--                        android:textColor="#000000"-->
                    <!--                        android:textSize="18sp"-->
                    <!--                        android:theme="@style/AppTheme.whiteRipple"-->
                    <!--                        tools:ignore="HardcodedText,NewApi" />-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        tools:ignore="Orientation">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:background="@drawable/background1"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="오늘의 예약"
                            android:textColor="#000000"
                            android:textSize="50sp" />

                        <Button
                            android:id="@+id/change"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:background="@drawable/background1"
                            android:text="변경"
                            android:textColor="#000000"
                            android:textSize="28sp"
                            android:theme="@style/AppTheme.whiteRipple"
                            tools:ignore="HardcodedText,NewApi" />

                        <Button
                            android:id="@+id/reserve"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:background="@drawable/background1"
                            android:text="예약"
                            android:textColor="#000000"
                            android:textSize="28sp"
                            android:theme="@style/AppTheme.whiteRipple"
                            tools:ignore="HardcodedText,NewApi" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="이름"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="휴대폰"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="시간"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="인원"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="좌석"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="54dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="입장"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/arc2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>

                <!--                좌석-->
                <!--                <Button-->
                <!--                    android:id="@+id/seatde"-->
                <!--                    android:layout_width="150dp"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:background="#FFEC00"-->
                <!--                    android:text="좌석관리"-->
                <!--                    android:textColor="#000000"-->
                <!--                    android:textSize="18sp" />-->

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9E000000"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>