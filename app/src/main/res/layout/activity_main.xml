<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFDE7"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--        <Button-->
            <!--            android:id="@+id/mlogbt"-->
            <!--            style="?android:attr/borderlessButtonStyle"-->
            <!--            android:layout_width="140dp"-->
            <!--            android:layout_height="80dp"-->
            <!--            android:background="?android:attr/selectableItemBackgroundBorderless"-->
            <!--            android:text="로그아웃"-->
            <!--            android:textColor="#000000"-->
            <!--            android:textSize="18sp"-->
            <!--            android:theme="@style/AppTheme.whiteRipple"-->
            <!--            tools:ignore="HardcodedText,NewApi" />-->

            <TextView
                android:id="@+id/mphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="TextView"
                android:textColor="#020202"
                android:textSize="50dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/m_et1"
                android:layout_width="430dp"
                android:layout_height="70dp"
                android:layout_marginBottom="45dp"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="13"
                android:text="010-"
                android:textColor="#020202"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/mphone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText,TextViewEdits" />

            <TextView
                android:id="@+id/m_tv1"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:background="#FFFDE7"
                android:gravity="center_horizontal|center_vertical"
                android:text="현재  팀이 대기중입니다"
                android:textColor="#020202"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                tools:ignore="NestedWeights">

                <Button
                    android:id="@+id/numbt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/numbt2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="2"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/numbt3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="3"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/numbt4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="4"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/numbt5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="5"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/numbt6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="6"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/numbt7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="7"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/numbt8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="8"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/numbt9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="9"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/remove"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="←"
                    android:textColor="#000000"
                    android:textSize="70sp"
                    android:textStyle="bold"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/numbt0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background1">

                    <Button
                        android:id="@+id/m_bt1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:text="확인"
                        android:textColor="#000000"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:theme="@style/AppTheme.whiteRipple"
                        tools:ignore="ContentDescription,NewApi" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/toast3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9E000000"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout10"
        app:layout_constraintStart_toStartOf="@+id/linearLayout10"
        app:layout_constraintTop_toTopOf="@+id/linearLayout10" />

</androidx.constraintlayout.widget.ConstraintLayout>