<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFDE7"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--        <Button-->
            <!--            android:id="@+id/mlogbt"-->
            <!--            style="?android:attr/borderlessButtonStyle"-->
            <!--            android:layout_width="140dp"-->
            <!--            android:layout_height="80dp"-->
            <!--            android:background="?android:attr/selectableItemBackgroundBorderless"-->
            <!--            android:text="로그아웃"-->
            <!--            android:textColor="#000000"-->
            <!--            android:textSize="18sp"-->
            <!--            android:theme="@style/AppTheme.whiteRipple"-->
            <!--            tools:ignore="HardcodedText,NewApi" />-->

            <TextView
                android:id="@+id/rcphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="번호를 입력하시면\n예약을 조회합니다"
                android:textColor="#020202"
                android:textSize="45sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rc_et1"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/rc_et1"
                android:layout_width="430dp"
                android:layout_height="70dp"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="13"
                android:text="010-"
                android:textColor="#020202"
                android:textSize="60sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,TextViewEdits" />

            <TextView
                android:id="@+id/rc_tv1"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:background="#FFFDE7"
                android:gravity="center_horizontal|center_vertical"
                android:text="예약 변경"
                android:textColor="#020202"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                tools:ignore="NestedWeights">

                <Button
                    android:id="@+id/rcnumbt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/rcnumbt2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="2"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/rcnumbt3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="3"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/rcnumbt4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="4"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/rcnumbt5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="5"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/rcnumbt6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="6"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/rcnumbt7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="7"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/rcnumbt8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="8"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/rcnumbt9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="9"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/rcremove"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="←"
                    android:textColor="#000000"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <Button
                    android:id="@+id/rcnumbt0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="60sp"
                    android:theme="@style/AppTheme.whiteRipple"
                    tools:ignore="ContentDescription,NewApi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background1">

                    <Button
                        android:id="@+id/rcm_bt1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:text="검색"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:theme="@style/AppTheme.whiteRipple"
                        tools:ignore="ContentDescription,NewApi" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>